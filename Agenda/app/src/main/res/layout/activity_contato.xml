<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.noemia.agenda.ContatoActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNome"
                android:layout_alignParentTop="true"

                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNumero2"
                android:layout_marginTop="31dp"
                android:layout_below="@+id/tvNome"
                android:layout_alignLeft="@+id/tvNome"
                android:layout_alignStart="@+id/tvNome" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:id="@+id/textView3"
                android:layout_below="@+id/tvNumero2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contatos: "
                android:layout_toRightOf="@+id/textView3"

                android:layout_above="@+id/tvNumero2"
                android:id="@+id/textView4"
                android:layout_alignTop="@+id/tvNome" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero:"
                android:id="@+id/textView5"
                android:layout_alignBottom="@+id/imageView"
                android:layout_toRightOf="@+id/tvNumero"
                android:layout_toEndOf="@+id/tvNumero"
                android:layout_marginBottom="45dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNumero"
                android:layout_alignTop="@+id/textView5" />


    <ImageView
             android:layout_width="130dp"
             android:layout_height="130dp"
             android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:layout_below="@+id/tvNumero2"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />


</RelativeLayout>


